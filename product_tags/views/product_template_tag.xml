<odoo>

    <record model="ir.ui.view" id="product_template_tag_form_view">
        <field name="name">product.template.tag.form (in product_tags)</field>
        <field name="model">product.template.tag</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(product.product_template_action)d" type="action"
                                class="oe_stat_button" icon="fa-archive"
                                context="{'search_default_tag_ids': active_id}">
                            <field name="products_count" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_tag_search_view">
        <field name="name">product.template.tag.search (in product_tags)</field>
        <field name="model">product.template.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_tag_tree_view">
        <field name="name">product.template.tag.tree (in product_tags)</field>
        <field name="model">product.template.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="products_count"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="product_template_tag_act_window">
        <field name="name">Product Template Tag</field>
        <field name="res_model">product.template.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>

</odoo>
