<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form (in product_tags)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="group_general" position='inside'>
                <field name="product_label_ids" widget="many2many_tags"
                       placeholder="Labels..." options="{'no_create_edit': True}"/>
            </group>
        </field>
    </record>

    <record id="product_template_search_view" model="ir.ui.view">
        <field name="name">product.template.search (in product_tags)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_label_ids" string="Label" filter_domain="[('product_label_ids','ilike', self)]"/>
            </field>
        </field>
    </record>

</odoo>
